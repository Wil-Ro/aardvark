{
	"compilerOptions": 
	{
		"outDir": "./lib/",
		"baseUrl": ".",
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es2016",
		"jsx": "react",
		"sourceMap": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"declaration": true,
		"declarationMap": true,
		"rootDir": "./src",
		"paths" :
		{
			"common/*" : [ "common/*" ],
			"*" : [ "node_modules/@types/*", "node_modules/*", "*" ]
		},
		"typeRoots": 
		[
			"node_modules/@types",
			"customTypes"
		],
		"moduleResolution" : "node"
	}
}